include <stdio.h>
#include <string.h>
int main()
{
    char str[100]; 
    int length, i;
    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);
    length = strlen(str);
    if (str[length - 1] == '\n') 
{
        str[length - 1] = '\0';
    }

    char reversed[100]; 
    for (i = 0; i < length; i++) 
{
        reversed[i] = str[length - 1 - i];
    }
    reversed[length] = '\0'; 
    printf("Reversed string: %s\n", reversed);
    return 0;
}
